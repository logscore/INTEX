<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>View Milestones</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>
		body { background: #ffd8d1; font-family: Arial, sans-serif; padding-top: 90px; }
		.card { border-radius: 12px; }
		.milestone-header { font-family: 'DM Serif Display', serif; font-size: 1.6rem; }
		.label { font-weight: 600; color: #444; }
		.milestone-group { margin-bottom: 20px; }
		.milestone-title { cursor: pointer; padding: 12px; background: #f8f9fa; border-radius: 8px; border-left: 4px solid #e45858; }
		.milestone-title:hover { background: #e9ecef; }
		.milestone-content { padding: 12px; background: #ffffff; border: 1px solid #dee2e6; border-top: none; border-radius: 0 0 8px 8px; }
	</style>
</head>
<body>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-10">
				<div class="card p-4">
					<div class="d-flex justify-content-between align-items-center">
						<div>
							<h2 class="milestone-header">Milestones Overview</h2>
							<p class="text-muted">View all milestones achieved by participants.</p>
						</div>
						<% if (typeof focusedMilestone === 'undefined' || !focusedMilestone) { %>
							<a href="/userDashboard" class="btn btn-white btn-sm">Return to Dashboard</a>
						<% } %>
					</div>

					<% if (typeof focusedMilestone !== 'undefined' && focusedMilestone && focusedMilestone.title) { %>
						<hr />
						<div class="d-flex justify-content-between align-items-center mb-4">
							<h3><%= focusedMilestone.title %></h3>
							<a href="/viewMilestones" class="btn btn-white btn-sm">Back to All Milestones</a>
						</div>
						<div class="card p-4 mb-4">
							<div class="table-responsive">
								<table class="table table-sm table-striped mb-0">
									<thead class="table-dark">
										<tr>
											<th>Participant</th>
											<th>Date</th>
										</tr>
									</thead>
									<tbody>
										<% focusedMilestone.items.forEach(function(m) { %>
											<tr>
												<td><%= m.ParticipantName %><br/><small class="text-muted"><%= m.ParticipantEmail || '—' %></small></td>
												<td><%= m.MilestoneDate ? new Date(m.MilestoneDate).toLocaleDateString() : '—' %></td>
											</tr>
										<% }) %>
									</tbody>
								</table>
							</div>
						</div>
					<% } else if (typeof milestoneGroups !== 'undefined' && milestoneGroups && Object.keys(milestoneGroups).length > 0) { %>
						<hr />
						<h4>All Milestones by Title</h4>
						<% Object.entries(milestoneGroups).forEach(function([title, milestonesForTitle]) { %>
							<% if (milestonesForTitle.length > 0) { %>
								<div class="milestone-group">
									<div class="milestone-title" data-bs-toggle="collapse" data-bs-target="#milestone-<%= title.replace(/\s+/g, '-').toLowerCase() %>" aria-expanded="false">
										<strong><%= title %></strong>
										<span class="float-end badge bg-secondary"><%= milestonesForTitle.length %> milestones</span>
									</div>
									<div class="collapse" id="milestone-<%= title.replace(/\s+/g, '-').toLowerCase() %>">
										<div class="milestone-content">
											<div class="table-responsive">
												<table class="table table-sm table-striped mb-0">
													<thead class="table-dark">
														<tr>
															<th>Participant</th>
															<th>Date</th>
														</tr>
													</thead>
													<tbody>
														<% milestonesForTitle.forEach(function(m) { %>
															<tr style="cursor: pointer;" onclick="window.location.href='/viewMilestones?title=<%= encodeURIComponent(title) %>';">
																<td><%= m.ParticipantName %><br/><small class="text-muted"><%= m.ParticipantEmail || '—' %></small></td>
																<td><%= m.MilestoneDate ? new Date(m.MilestoneDate).toLocaleDateString() : '—' %></td>
															</tr>
														<% }) %>
													</tbody>
												</table>
											</div>
										</div>
									</div>
								</div>
							<% } %>
						<% }) %>
					<% } else { %>
						<hr />
						<div class="alert alert-info">
							<strong>No milestones found.</strong>
						</div>
					<% } %>
				</div>
			</div>
		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
