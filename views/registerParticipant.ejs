<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Complete Your Registration - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: linear-gradient(135deg, #ffd8d1 0%, #ffe8e1 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .container {
      max-width: 600px;
    }
    .form-container {
      background: white;
      border-radius: 15px;
      box-shadow: 0 10px 40px rgba(228, 88, 88, 0.15);
      padding: 40px;
    }
    .form-header {
      text-align: center;
      margin-bottom: 30px;
    }
    .form-header h1 {
      color: #e45858;
      font-size: 28px;
      margin-bottom: 10px;
      font-weight: bold;
    }
    .form-header p {
      color: #666;
      font-size: 14px;
    }
    .form-group label {
      color: #333;
      font-weight: 500;
      margin-bottom: 8px;
      font-size: 14px;
    }
    .form-control {
      border: 1.5px solid #ddd;
      border-radius: 8px;
      padding: 10px 15px;
      font-size: 14px;
      transition: border-color 0.3s;
    }
    .form-control:focus {
      border-color: #e45858;
      box-shadow: 0 0 0 0.2rem rgba(228, 88, 88, 0.25);
    }
    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
    }
    .form-row.full {
      grid-template-columns: 1fr;
    }
    .btn-primary {
      background-color: #e45858;
      border: none;
      padding: 12px 30px;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s;
      margin-top: 10px;
    }
    .btn-primary:hover {
      background-color: #cc4646;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(228, 88, 88, 0.3);
    }
    .btn-secondary {
      background-color: #f0f0f0;
      border: none;
      color: #333;
      padding: 12px 30px;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s;
      margin-top: 10px;
    }
    .btn-secondary:hover {
      background-color: #e0e0e0;
      transform: translateY(-2px);
    }
    .button-group {
      display: flex;
      gap: 10px;
      justify-content: center;
      margin-top: 20px;
    }
    .button-group button {
      flex: 1;
    }
    .alert {
      border-radius: 8px;
      border: none;
      margin-bottom: 20px;
    }
    .alert-success {
      background-color: #d4edda;
      color: #155724;
    }
    .alert-danger {
      background-color: #f8d7da;
      color: #721c24;
    }
    .text-muted {
      font-size: 12px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="form-container">
      <div class="form-header">
        <h1>Complete Your Registration</h1>
        <p>Thank you for your donation! Help us know more about you.</p>
      </div>

      <% if (typeof error_message !== 'undefined' && error_message) { %>
        <div class="alert alert-danger"><%= error_message %></div>
      <% } %>

      <%
        // Split full name into first and last name
        let firstName = '';
        let lastName = '';
        if (name) {
          const nameParts = name.trim().split(/\s+/);
          firstName = nameParts[0] || '';
          lastName = nameParts.slice(1).join(' ') || '';
        }
      %>

      <form id="registrationForm">
        <!-- Contact Information -->
        <div class="form-row">
          <div class="form-group">
            <label for="firstName">First Name *</label>
            <input type="text" id="firstName" name="firstName" class="form-control" value="<%= firstName %>" required>
          </div>
          <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" class="form-control" value="<%= lastName %>">
          </div>
        </div>

        <div class="form-group">
          <label for="email">Email *</label>
          <input type="email" id="email" name="email" class="form-control" value="<%= email %>" required>
        </div>

        <div class="form-group">
          <label for="donationAmount">Donation Amount ($) *</label>
          <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="number" id="donationAmount" name="donationAmount" class="form-control" value="<%= typeof amount !== 'undefined' && amount ? amount : '' %>" placeholder="0.00" step="0.01" min="0.01" required>
          </div>
          <small class="text-muted">The donation amount you wish to contribute.</small>
        </div>

        <div class="form-group">
          <label for="phone">Phone Number</label>
          <input type="tel" id="phone" name="phone" class="form-control" placeholder="(123) 456-7890">
        </div>

        <!-- Personal Information -->
        <div class="form-row">
          <div class="form-group">
            <label for="dateOfBirth">Date of Birth</label>
            <input type="date" id="dateOfBirth" name="dateOfBirth" class="form-control">
          </div>
          <div class="form-group">
            <label for="role">Role</label>
            <select id="role" name="role" class="form-control">
              <option value="">Select a role</option>
              <option value="Donor">Donor</option>
              <option value="Volunteer">Volunteer</option>
              <option value="Partner">Partner</option>
              <option value="Other">Other</option>
            </select>
          </div>
        </div>

        <!-- Location Information -->
        <div class="form-row">
          <div class="form-group">
            <label for="city">City</label>
            <input type="text" id="city" name="city" class="form-control">
          </div>
          <div class="form-group">
            <label for="state">State</label>
            <input type="text" id="state" name="state" class="form-control" maxlength="2">
          </div>
        </div>

        <div class="form-group">
          <label for="zip">Zip Code</label>
          <input type="text" id="zip" name="zip" class="form-control">
        </div>

        <!-- Organization Information -->
        <div class="form-group">
          <label for="schoolOrEmployer">School / Employer</label>
          <input type="text" id="schoolOrEmployer" name="schoolOrEmployer" class="form-control">
        </div>

        <div class="form-group">
          <label for="fieldOfInterest">Field of Interest</label>
          <select id="fieldOfInterest" name="fieldOfInterest" class="form-control">
            <option value="">Select an area</option>
            <option value="Education">Education</option>
            <option value="Health">Health</option>
            <option value="Technology">Technology</option>
            <option value="Community Development">Community Development</option>
            <option value="Other">Other</option>
          </select>
        </div>

        <!-- Loading indicator -->
        <div id="loadingMessage" style="display: none; text-align: center; color: #e45858; margin-top: 10px;">
          <small>Processing your registration...</small>
        </div>

        <!-- Buttons -->
        <div class="button-group">
          <button type="submit" class="btn btn-primary" id="submitBtn">
            <i class="fas fa-check-circle"></i> Complete Registration
          </button>
          <button type="button" class="btn btn-secondary" onclick="goBackToDonation()">
            <i class="fas fa-arrow-left"></i> Back
          </button>
        </div>
      </form>

      <p class="text-center text-muted" style="margin-top: 20px;">
        * Required fields
      </p>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById("registrationForm").addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = {
        firstName: document.getElementById("firstName").value.trim(),
        lastName: document.getElementById("lastName").value.trim(),
        email: document.getElementById("email").value.trim(),
        donationAmount: parseFloat(document.getElementById("donationAmount").value),
        phone: document.getElementById("phone").value.trim() || null,
        dateOfBirth: document.getElementById("dateOfBirth").value || null,
        role: document.getElementById("role").value || null,
        city: document.getElementById("city").value.trim() || null,
        state: document.getElementById("state").value.trim() || null,
        zip: document.getElementById("zip").value.trim() || null,
        schoolOrEmployer: document.getElementById("schoolOrEmployer").value.trim() || null,
        fieldOfInterest: document.getElementById("fieldOfInterest").value || null
      };

      // Validate required fields
      if (!formData.firstName || !formData.email || !formData.donationAmount || isNaN(formData.donationAmount) || formData.donationAmount <= 0) {
        alert("Please fill in all required fields (First Name, Email, and Donation Amount)");
        return;
      }

      document.getElementById("loadingMessage").style.display = "block";
      document.getElementById("submitBtn").disabled = true;

      try {
        const response = await fetch("/submitParticipantRegistration", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify(formData)
        });

        const data = await response.json();

        if (data.success) {
          // Store participant ID in session storage for the donation form
          sessionStorage.setItem("newParticipantID", data.participantID);
          
          // Show success message
          alert("Registration completed successfully! Your donation has been recorded.");
          
          // Redirect back to home or donation page
          window.location.href = "/";
        } else {
          alert(data.message || "Error creating registration");
          document.getElementById("loadingMessage").style.display = "none";
          document.getElementById("submitBtn").disabled = false;
        }
      } catch (err) {
        console.error("Error:", err);
        alert("There was an error processing your registration. Please try again.");
        document.getElementById("loadingMessage").style.display = "none";
        document.getElementById("submitBtn").disabled = false;
      }
    });

    function goBackToDonation() {
      window.history.back();
    }
  </script>
</body>
</html>
