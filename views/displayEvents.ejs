<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Upcoming Events</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #FFD8D1;
            font-family: Arial, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        :root {
            --gray: #555;
            --donate: #E45858;
        }

        /* HEADER */
        .navbar-brand {
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .brand-box {
            width: 30px;
            height: 30px;
            background: white;
            border-radius: 6px;
            display: inline-block;
        }

        /* BUTTONS */
        .btn-white {
            background: white;
            border: 2px solid var(--gray);
            color: var(--gray) !important;
            transition: 0.2s;
        }
        .btn-white:hover {
            background: var(--gray);
            color: white !important;
        }

        /* CARD */
        .card-custom {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        /* FOOTER (OFFICIAL) */
        .footer {
            background-color: black;
            color: white;
            height: 100px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 40px;
        }
        .footer-text {
            font-family: 'DM Serif Display', serif;
            font-size: 1.5rem;
            display: flex;
            gap: 10px;
            align-items: center;
        }
        .footer-box {
            width: 30px;
            height: 30px;
            background: white;
            border-radius: 6px;
            display: inline-block;
        }

        .copyright {
            text-align: center;
            padding: 8px 0 20px;
            font-size: 0.9rem;
            color: black;
        }
    </style>
</head>

<body>

    <!-- HEADER -->
    <nav class="navbar navbar-light bg-white shadow-sm px-4">
        <a class="navbar-brand" href="/">
            Ella
            <img src="/fulllogo.jpg" alt="Ella Rises Logo" style="width:35px; height:35px; object-fit: contain; vertical-align: text-bottom; margin-left: 8px;">
            Rises
        </a>

        <div>
            <a href="/userDashboard" class="btn btn-white btn-sm me-2">Dashboard</a>
            <a href="/" class="btn btn-white btn-sm">Home</a>
        </div>
    </nav>


    <!-- MAIN CONTENT -->
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Upcoming Events</h1>

        <% if (events && events.length > 0) { %>

        <div class="row g-4">
            <% events.forEach(event => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card card-custom p-3">
                        <h4><%= event.eventName %></h4>

                        <p class="text-muted mb-1">
                            <strong>Date:</strong> <%= event.eventDate %>
                        </p>

                        <p class="text-muted mb-1">
                            <strong>Location:</strong> <%= event.eventLocation %>
                        </p>

                        <p><%= event.eventDescription %></p>
                    </div>
                </div>
            <% }) %>
        </div>

        <% } else { %>

        <div class="card card-custom p-4 text-center">
            <h4>No events have been added yet.</h4>
            <p>Please check back soon!</p>
        </div>

        <% } %>

    </div>


    <!-- FOOTER -->
    <div class="footer">
        <div class="footer-text">
            Ella
            <img src="/EllaRises.jpg" alt="Logo" style="width:30px; height:auto; vertical-align: middle;">
            Rises
        </div>
    </div>

    <p class="copyright">Â© 2025 Ella Rises. All Rights Reserved.</p>

</body>
</html>
