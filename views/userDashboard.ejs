<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User Dashboard</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    /* GLOBAL */
    body {
      background-color: #FFD8D1;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      font-family: Arial, sans-serif;
    }

    :root {
      --gray: #555;
      --donate: #E45858;
    }

    /* HEADER */
    .navbar-brand {
      font-weight: bold;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .brand-box {
      width: 30px;
      height: 30px;
      background: white;
      border-radius: 6px;
      display: inline-block;
    }

    /* BUTTONS */
    .btn-white {
      background: white;
      border: 2px solid var(--gray);
      color: var(--gray) !important;
      transition: 0.2s;
    }
    .btn-white:hover {
      background: var(--gray);
      color: white !important;
    }

    .btn-donate {
      background: var(--donate);
      color: white !important;
      border: none;
    }
    .btn-donate:hover {
      opacity: 0.9;
    }

    /* CARDS */
    .card-custom {
      background: white;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    /* FOOTER (BLACK VERSION) */
    .footer {
      background-color: black;
      color: white;
      height: 100px;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 40px;
    }

    .footer-text {
      font-family: 'DM Serif Display', serif;
      font-size: 1.5rem;
      display: flex;
      gap: 10px;
      align-items: center;
    }

    .footer-box {
      width: 30px;
      height: 30px;
      background: white;
      border-radius: 6px;
      display: inline-block;
    }

    .copyright {
      text-align: center;
      padding: 8px 0 20px;
      font-size: 0.9rem;
      color: black;
    }
  </style>
</head>

<body>

  <!-- HEADER -->
  <nav class="navbar navbar-light bg-white shadow-sm px-4">
    <a class="navbar-brand" href="/">
      Ella
      <img src="/fulllogo.jpg" alt="Ella Rises Logo" style="width:35px; height:35px; object-fit: contain; vertical-align: text-bottom; margin-left: 8px;">
      Rises
    </a>

  <div>
    <% if (userLevel === 'M') { %>
      <a href="/displayUsers" class="btn btn-white btn-sm me-2">Manage Users</a>
      <a href="/tableauDashboard" class="btn btn-white btn-sm me-2">Tableau Insights</a>
    <% } %>
    <a href="/" class="btn btn-white btn-sm me-2">Home</a>
    <a href="/logout" class="btn btn-white btn-sm">Logout</a>
  </div>
</nav>


  <!-- MAIN CONTENT -->
  <div class="container py-4">

    <!-- REGISTERED EVENTS -->
    <div class="card card-custom mb-5 p-4">
      <h3>Your Registered Events</h3>

      <table class="table table-striped table-hover mt-3">
        <thead class="table-dark">
          <tr>
            <th>Event Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>Description</th>
            <th>Survey</th>
          </tr>
        </thead>

        <tbody>
          <% registeredEvents.forEach(event => { %>
            <tr>
              <td><%= event.EventName %></td>
              <td><%= event.EventDateTimeStart.toLocaleString() %></td>
              <td><%= event.EventLocation %></td>
              <td><%= event.EventDescription %></td>
              <td>
                <a href="/displaySurveys?eventId=<%= event.EventOccurrenceID %>"
                   class="btn btn-white btn-sm">
                  Fill Survey
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- ROW: MILESTONES + DONATIONS -->
    <div class="row g-4">

      <!-- MILESTONES -->
      <div class="col-md-6">
        <div class="card card-custom p-4">
          <h4>Milestones Reached</h4>
          <p class="display-6"><%= milestoneCount %> Milestones</p>
          <a href="/displayMilestones" class="btn btn-white">View Milestones</a>
        </div>
      </div>

      <!-- DONATIONS -->
      <div class="col-md-6">
        <div class="card card-custom p-4">
          <h4>Your Total Donations</h4>
          <p class="display-6">$<%= donationTotal %></p>
          <a href="https://givebutter.com/EllaRises" target="_blank" class="btn btn-donate">
            Visit Donation Page
          </a>
        </div>
      </div>

    </div>

    <!-- SURVEYS -->
    <div class="card card-custom mb-5 p-4 mt-5">
      <h3>Your Submitted Surveys</h3>

      <% if (!surveys || surveys.length === 0) { %>
        <p class="text-muted">You have not submitted any surveys yet.</p>
      <% } else { %>
        <table class="table table-striped table-hover mt-3">
          <thead class="table-dark">
            <tr>
              <th>Event</th>
              <th>Overall</th>
              <th>Comments</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% surveys.forEach(s => { %>
              <tr>
                <td><%= s.EventName || 'N/A' %></td>
                <td><%= s.SurveyOverallScore !== null ? s.SurveyOverallScore.toFixed(2) : '—' %></td>
                <td><%= s.SurveyComments ? s.SurveyComments : '—' %></td>
                <td><%= s.SurveySubmissionDate ? new Date(s.SurveySubmissionDate).toLocaleString() : '—' %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>

  <!-- FOOTER -->
  <div class="footer">
    <div class="footer-text">
      Ella
      <img src="/EllaRises.jpg" alt="Logo" style="width:30px; height:auto; vertical-align: middle;">
      Rises
    </div>
  </div>

  <p class="copyright">
    © 2025 Ella Rises. All Rights Reserved.
  </p>

</body>
</html>
