<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User Dashboard</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #FFD6CF;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* HEADER */
    .navbar-brand {
      font-weight: bold;
      display: flex;
      align-items: center;
      gap: 6px;
    }
    .brand-box {
      width: 30px;
      height: 30px;
      background: white;
      border-radius: 6px;
      display: inline-block;
    }

    /* BUTTONS */
    :root {
      --gray: #555;
      --donate: #ff8b70;
    }

    .btn-white {
      background: white;
      border: 2px solid var(--gray);
      color: var(--gray) !important;
      transition: 0.2s;
    }
    .btn-white:hover {
      background: var(--gray);
      color: white !important;
    }

    .btn-donate {
      background: var(--donate);
      color: white !important;
      border: none;
    }
    .btn-donate:hover {
      opacity: 0.9;
      color: white !important;
    }

    /* MAIN CONTENT */
    .content-wrapper {
      flex: 1;
      padding: 2rem 1rem;
    }

    /* FOOTER */
    .footer {
        background-color: black;
        color: white;
        height: 100px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 0;
    }

    .footer-text {
        font-family: 'DM Serif Display', serif;
        font-size: 1.5rem;
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .copyright {
      font-size: 0.9rem;
      color: #555;
      margin-top: 4px;
    }
  </style>
</head>

<body>

  <!-- HEADER -->
  <nav class="navbar navbar-light bg-white shadow-sm px-4">
    <a class="navbar-brand" href="/">
      Ella <span class="brand-box"></span> Rises
    </a>

    <div>
      <a href="/" class="btn btn-outline-secondary btn-sm">Home</a>
    </div>
  </nav>

  <!-- MAIN CONTENT -->
  <div class="content-wrapper container">

    <h1 class="mb-4 text-center">Welcome, <%= username %>!</h1>

    <!-- REGISTERED EVENTS -->
    <div class="card shadow-sm mb-5">
      <div class="card-body">
        <h3 class="mb-3">Your Registered Events</h3>

        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Event Name</th>
              <th>Date</th>
              <th>Location</th>
              <th>Description</th>
              <th>Survey</th>
            </tr>
          </thead>

          <tbody>
            <% registeredEvents.forEach(event => { %>
              <tr>
                <td><%= public.event.eventName %></td>
                <td><%= public.event.eventDate %></td>
                <td><%= public.event.eventLocation %></td>
                <td><%= public.event.eventDescription %></td>

                <td>
                  <a href="/displaySurveys?eventId=<%= event.eventId %>"
                     class="btn btn-white btn-sm">
                    Fill Survey
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

      </div>
    </div>

    <!-- MILESTONES + DONATIONS -->
    <div class="row g-4">

      <!-- MILESTONES -->
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h4>Milestones Reached</h4>

            <p class="display-6"><%= milestoneCount %> Milestones</p>

            <a href="/displayMilestones" class="btn btn-white">View Milestones</a>
          </div>
        </div>
      </div>

      <!-- DONATIONS -->
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h4>Your Total Donations</h4>

            <p class="display-6">$<%= donationTotal %></p>

            <a href="https://givebutter.com/EllaRises"
               target="_blank"
               class="btn btn-donate">
               Visit Donation Page
            </a>
          </div>
        </div>
      </div>

    </div>

  </div>

  <!-- FOOTER -->
  <div class="footer">
    <div class="footer-text">
      Ella <span class="brand-box"></span> Rises
    </div>
    <p class="copyright">
      Â© 2025 Ella Rises. All Rights Reserved.
    </p>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
