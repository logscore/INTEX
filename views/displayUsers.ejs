<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&display=swap" rel="stylesheet">

    <!-- Shared styles -->
    <style>
        :root {
            --cream: #f9f5ea;
            --light-pink: #ffd8d1;
            --pink: #f9afb1;
            --sage: #9ab59d;
            --gray: #3a3f3b;
            --coral: #f4b092;
            --rose: #ce325b;
        }

        body {
            background-color: var(--light-pink);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: var(--gray);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* NAVBAR */
        .navbar-brand {
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 1.25rem;
        }

        .brand-box {
            width: 30px;
            height: 30px;
            background: white;
            border-radius: 6px;
            display: inline-block;
        }

        /* PAGE WRAPPER */
        .page-wrapper {
            padding: 40px 20px;
            flex: 1;
        }

        .page-title {
            font-family: 'DM Serif Display', serif;
            font-size: 2.4rem;
            text-align: center;
            margin-bottom: 30px;
        }

        .content-container {
            max-width: 1000px;
            margin: 0 auto;
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.05);
        }

        table {
            background: white;
        }

        .table thead th {
            background-color: var(--pink);
            color: white;
        }

        .btn-white {
            background: white;
            border: 2px solid var(--gray);
            color: var(--gray) !important;
            transition: 0.2s;
        }

        .btn-white:hover {
            background: var(--gray);
            color: white !important;
        }

        /* FOOTER */
        .footer {
            background-color: black;
            color: white;
            height: 100px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 40px;
        }

        .footer-text {
            font-family: 'DM Serif Display', serif;
            font-size: 1.5rem;
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .footer-box {
            width: 30px;
            height: 30px;
            background: white;
            border-radius: 6px;
            display: inline-block;
        }

        .copyright {
            text-align: center;
            padding: 8px 0 20px;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>


<!-- NAVBAR -->
<nav class="navbar navbar-light bg-white shadow-sm px-4">
  <a class="navbar-brand" href="/">
    Ella
    <img src="/fulllogo.jpg" alt="Ella Rises Logo" style="width:35px; height:35px; object-fit: contain; vertical-align: text-bottom; margin-left: 8px;">
    Rises
  </a>

  <div>
    <a href="/userDashboard" class="btn btn-white btn-sm me-2">Back to Dashboard</a>
    <a href="/logout" class="btn btn-white btn-sm">Logout</a>
  </div>
</nav>

<!-- PAGE CONTENT -->
<div class="page-wrapper container">
    <h1 class="page-title">User Management</h1>

    <div class="content-container">

        <!-- Manager-only Add User button -->
        <% if (userLevel === "M") { %>
            <form action="/addUser" method="GET">
                <button type="submit" class="btn btn-white mb-3">Add User</button>
            </form>
        <% } %>

        <!-- Error message -->
        <% if (typeof error_message !== 'undefined' && error_message) { %>
            <div class="alert alert-danger" role="alert">
                <%= error_message %>
            </div>
        <% } %>

        <!-- No users case -->
        <% if (users.length === 0) { %>
            <div class="alert alert-warning" role="alert">
                No users found in the database.
            </div>
        <% } else { %>

            <!-- Users Table -->
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Password</th>
                        <% if (userLevel === "M") { %>
                            <th>Edit</th>
                            <th>Delete</th>
                        <% } %>
                    </tr>
                </thead>

                <tbody>

                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.password %></td>

                        <% if (userLevel === "M") { %>
                            <td>
                                <form action="/editUser/<%= user.id %>" method="get">
                                    <button class="btn-white">Edit</button>
                                </form>
                            </td>

                            <td>
                                <form class="deleteForm" action="/deleteUser/<%= user.id %>" method="post">
                                    <button class="btn-white" style="border-color: red; color: red;">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        <% } %>

                    </tr>
                <% }) %>

                </tbody>
            </table>

        <% } %>

    </div>
</div>

<!-- FOOTER -->
<div class="footer">
  <div class="footer-text">
    Ella 
    <img src="/EllaRises.jpg" alt="Logo" style="width:30px; height:auto; vertical-align: middle;">
    Rises
  </div>
</div>

<p class="copyright">Â© 2025 Ella Rises. All Rights Reserved.</p>

    <!-- Delete confirmation script -->
    <script>
        document.querySelectorAll('form.deleteForm').forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!confirm("Are you sure you want to delete this user?")) {
                    e.preventDefault();
                }
            });
        });
    </script>

</body>
</html>
