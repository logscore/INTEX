<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Shared styles (same idea as your landing/dashboard pages) -->
    <style>
        :root {
            --pink: #e75480;
            --gray: #333;
            --light-gray: #f8f8f8;
        }

        body {
            background: var(--light-gray);
            font-family: Arial, sans-serif;
        }

        header, footer {
            background: white;
            padding: 15px 25px;
            border-bottom: 2px solid var(--pink);
        }

        footer {
            border-top: 2px solid var(--pink);
            border-bottom: none;
            margin-top: 40px;
            text-align: center;
        }

        .header-title {
            font-size: 1.6rem;
            font-weight: bold;
            color: var(--gray);
        }

        .btn-white {
            background: white;
            border: 2px solid var(--gray);
            color: var(--gray);
            font-weight: 600;
        }

        .btn-white:hover {
            background: var(--gray);
            color: white;
        }

        .btn-pink {
            background: var(--pink);
            color: white;
            font-weight: 600;
            border: none;
        }

        .btn-pink:hover {
            background: #c6456c;
            color: white;
        }

        .content-container {
            max-width: 1000px;
            margin: 30px auto;
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.05);
        }

        table {
            background: white;
        }

        .table thead th {
            background-color: var(--pink);
            color: white;
        }
    </style>
</head>

<body>

    <!-- Header -->
    <header>
        <div class="header-title">Ella Rises – User Management</div>
    </header>

    <!-- Main content -->
    <div class="content-container">

        <h1 class="mb-4">Users List</h1>

        <!-- Manager-only Add User button -->
        <% if (userLevel === "M") { %>
            <form action="/addUser" method="GET">
                <button type="submit" class="btn-pink mb-3">Add User</button>
            </form>
        <% } %>

        <!-- Error message -->
        <% if (typeof error_message !== 'undefined' && error_message) { %>
            <div class="alert alert-danger" role="alert">
                <%= error_message %>
            </div>
        <% } %>

        <!-- No users case -->
        <% if (users.length === 0) { %>
            <div class="alert alert-warning" role="alert">
                No users found in the database.
            </div>
        <% } else { %>

            <!-- Users Table -->
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Password</th>
                        <% if (userLevel === "M") { %>
                            <th>Edit</th>
                            <th>Delete</th>
                        <% } %>
                    </tr>
                </thead>

                <tbody>

                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.password %></td>

                        <% if (userLevel === "M") { %>
                            <td>
                                <form action="/editUser/<%= user.id %>" method="get">
                                    <button class="btn-white">Edit</button>
                                </form>
                            </td>

                            <td>
                                <form class="deleteForm" action="/deleteUser/<%= user.id %>" method="post">
                                    <button class="btn-white" style="border-color: red; color: red;">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        <% } %>

                    </tr>
                <% }) %>

                </tbody>
            </table>

        <% } %>

        <!-- Back + Logout -->
        <div class="mt-4">
            <a href="/userDashboard" class="btn-white">Back to Dashboard</a>
            <a href="/logout" class="btn-pink">Logout</a>
        </div>

    </div>

    <!-- FOOTER -->
  <div class="footer">
    <div class="footer-text">
      Ella <span class="brand-box"></span> Rises
    </div>
    <p class="copyright">
      © 2025 Ella Rises. All Rights Reserved.
    </p>
  </div>

    <!-- Delete confirmation script -->
    <script>
        document.querySelectorAll('form.deleteForm').forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!confirm("Are you sure you want to delete this user?")) {
                    e.preventDefault();
                }
            });
        });
    </script>

</body>
</html>
